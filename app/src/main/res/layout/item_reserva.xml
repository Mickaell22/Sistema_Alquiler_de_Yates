<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Icono del yate -->
            <ImageView
                android:id="@+id/ivYateIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_yacht"
                android:padding="8dp"
                android:background="@drawable/bg_card"
                app:tint="@color/primary" />

            <!-- Información principal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReservaId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reserva #001"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface"
                    android:alpha="0.6" />

                <TextView
                    android:id="@+id/tvClienteNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Perez"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvYateNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sea Breeze (Azimut 55)"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface"
                    android:alpha="0.8"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Badge de Estado -->
            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/on_primary"
                android:background="@drawable/bg_button"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/on_surface"
            android:alpha="0.1"
            android:layout_marginVertical="12dp" />

        <!-- Detalles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Fechas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fechas"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface"
                    android:alpha="0.6"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFechas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/12/2023 - 20/12/2023"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Precio -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio Total"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface"
                    android:alpha="0.6"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrecioTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$7,500.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botón de menú -->
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_more"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/on_surface"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
