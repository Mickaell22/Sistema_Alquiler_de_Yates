<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono del cliente -->
        <ImageView
            android:id="@+id/ivClienteIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person"
            android:padding="8dp"
            android:background="@drawable/bg_card"
            app:tint="@color/primary" />

        <!-- Información del cliente -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvClienteNombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombres"
                android:textColor="@color/on_surface"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClienteApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellidos"
                android:textColor="@color/on_surface"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClienteCedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:alpha="0.7"
                android:text="Cédula"
                android:textColor="@color/on_surface"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvClienteEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:alpha="0.7"
                android:text="cliente@yates.com"
                android:textColor="@color/on_surface"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- Badge de Tipo de Cliente -->
                <TextView
                    android:id="@+id/tvTipoCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="VIP"
                    android:textColor="@color/on_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Badge de Estado -->
                <TextView
                    android:id="@+id/tvClienteEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface"
                    android:alpha="0.7"
                    android:layout_marginStart="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botón de menú (3 puntos) -->
        <ImageView
            android:id="@+id/btnMenuCliente"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_more"
            app:tint="@color/on_surface" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>